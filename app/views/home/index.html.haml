%p
  - if current_user
    #search-form.well.well-lg
      = simple_form_for @search, remote: true, html: { class: 'form-inline' }, validate: true do |f|
        = f.hidden_field :user_id, value: current_user.id
        = f.input :cep, label: false
        = f.button :submit, "Pesquisar", class: 'btn btn-primary'
        = image_tag 'ajax-loading.svg', style: 'height: 34px; display: none', id: 'ajax_loader'
    #search-result{style: 'display: none'}

    #search-history
      %h3 Ãšltimas Pesquisas
      = render current_user.searches
  - else
    = link_to "Login com Facebook", signin_path, class: 'btn btn-primary btn-large'
